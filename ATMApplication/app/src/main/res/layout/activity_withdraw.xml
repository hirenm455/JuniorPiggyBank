<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawActivity"
    android:background="@drawable/b8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtVw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20sp" />

    <TextView
        android:id="@+id/txtVw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="230sp" />



    <TextView
        android:id="@+id/txtVw11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20sp" />

    <TextView
        android:id="@+id/txtVw12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="230sp" />

    <TextView
        android:id="@+id/txtVw21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20sp" />

    <TextView
        android:id="@+id/txtVw22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="@font/cinzel_black"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="230sp" />

    <Button
        android:layout_width="180sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="193dp"
        android:background="@drawable/select"
        android:fontFamily="@font/cinzel_black"
        android:text="Buy"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="340dp"
        android:onClick="buy"/>
</RelativeLayout>