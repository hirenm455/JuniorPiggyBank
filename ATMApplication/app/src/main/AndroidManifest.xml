<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.atmapplication">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DepositActivity"></activity>
        <activity android:name=".PerformTaskActivity" />
        <activity android:name=".QuickTransferActivity" />
        <activity android:name=".AddTaskActivity" />
        <activity android:name=".WithdrawActivity" />
        <activity android:name=".WishlistActivity" />
        <activity android:name=".MainParentActivity" />
        <activity android:name=".LimitActivity" />
        <activity android:name=".MainChildActivity" />
        <activity android:name=".ParentActivity" />
        <activity android:name=".ChildActivity" />
        <activity android:name=".SelectActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>